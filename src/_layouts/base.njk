<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} - Valley Car Credit</title>
    <meta name="description" content="{{ description }}">

    <!-- Google Fonts Preconnect for Performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <!-- Open Graph Tags -->
    <meta property="og:title" content="{{ title }} - Valley Car Credit">
    <meta property="og:description" content="{{ description }}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://valleycarcredit.com{{ page.url }}">
    <meta property="og:image" content="/images/vcc-logo.jpg" width="1200" height="630">

    <!-- Canonical URL -->
    <link rel="canonical" href="https://valleycarcredit.com{{ page.url }}">

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="{{ '/favicon.ico' | url }}">

    <!-- CSS -->
    <link rel="stylesheet" href="{{ '/css/styles.css' | url }}">

    <!-- Structured Data -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Valley Car Credit",
        "image": "https://valleycarcredit.com/images/vcc-logo.jpg",
        "description": "Auto financing and credit rebuilding services in Staunton, Virginia",
        "address": {
            "@type": "PostalAddress",
            "streetAddress": "537 Richmond Avenue",
            "addressLocality": "Staunton",
            "addressRegion": "VA",
            "postalCode": "24401",
            "addressCountry": "US"
        },
        "geo": {
            "@type": "GeoCoordinates",
            "latitude": 38.1496,
            "longitude": -79.0717
        },
        "url": "https://valleycarcredit.com",
        "telephone": "+1-540-213-0202",
        "email": "info@valleycarcredit.com",
        "priceRange": "$$",
        "openingHours": "Mo-Fr 09:00-17:00"
    }
    </script>
</head>
<body>
    <!-- Skip Navigation for Accessibility -->
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <!-- Header -->
    <header class="header">
        <div class="container">
            <div class="header-content">
                <div class="logo">
                    <a href="{{ '/' | url }}" aria-label="Valley Car Credit Home">
                        <img src="{{ '/images/vcc_logo.jpg' | url }}" alt="Valley Car Credit Logo" class="logo-img">
                    </a>
                </div>

                <nav class="nav" role="navigation">
                    <button class="nav-toggle" aria-label="Toggle navigation menu" aria-expanded="false">
                        <span></span>
                        <span></span>
                        <span></span>
                    </button>

                    <ul class="nav-menu">
                        <li><a href="{{ '/' | url }}" class="nav-link {% if page.url == '/' %}active{% endif %}">Home</a></li>
                        <li><a href="{{ '/online-account/' | url }}" class="nav-link {% if page.url == '/online-account/' %}active{% endif %}">Account</a></li>
                        <li><a href="{{ '/make-payment/' | url }}" class="nav-link {% if page.url == '/make-payment/' %}active{% endif %}">Make Payment</a></li>
                        <li><a href="{{ '/credit-improvement/' | url }}" class="nav-link {% if page.url == '/credit-improvement/' %}active{% endif %}">Improve Credit</a></li>
                        <li><a href="{{ '/cpi/' | url }}" class="nav-link {% if page.url == '/cpi/' %}active{% endif %}">CPI Insurance</a></li>
                        <li><a href="{{ '/resources/' | url }}" class="nav-link {% if page.url == '/resources/' %}active{% endif %}">Resources</a></li>
                        <li><a href="{{ '/blog/' | url }}" class="nav-link {% if page.url == '/blog/' %}active{% endif %}">Blog</a></li>
                        <li><a href="{{ '/contact/' | url }}" class="nav-link {% if page.url == '/contact/' %}active{% endif %}">Contact</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <main id="main-content" class="main">
        {{ content | safe }}
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>Valley Car Credit</h3>
                    <address>
                        537 Richmond Avenue<br>
                        Staunton, VA 24401<br>
                        Phone: <a href="tel:540-213-0202">540-213-0202</a><br>
                        Email: <a href="mailto:info@valleycarcredit.com">info@valleycarcredit.com</a>
                    </address>
                </div>

                <div class="footer-section">
                    <h3>Quick Links</h3>
                    <ul class="footer-links">
                        <li><a href="{{ '/online-account/' | url }}">Account</a></li>
                        <li><a href="{{ '/make-payment/' | url }}">Make Payment</a></li>
                        <li><a href="{{ '/credit-improvement/' | url }}">Improve Credit</a></li>
                        <li><a href="{{ '/cpi/' | url }}">CPI Insurance</a></li>
                        <li><a href="{{ '/resources/' | url }}">Resources</a></li>
                        <li><a href="{{ '/blog/' | url }}">Blog</a></li>
                        <li><a href="{{ '/contact/' | url }}">Contact</a></li>
                    </ul>
                </div>

                <div class="footer-section">
                    <h3>Important Information</h3>
                    <p>Credit advice provided is for educational purposes only. Individual results may vary. Always consult with financial professionals for personalized advice.</p>
                    <p><a href="{{ '/privacy/' | url }}">Privacy Policy</a> | <a href="{{ '/terms/' | url }}">Terms of Service</a></p>
                </div>
            </div>

            <div class="footer-bottom">
                <p>&copy; 2024 Valley Car Credit. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Chat Widget Placeholder (disabled)
    <div class="chat-widget" id="chat-widget">
        <button class="chat-toggle" aria-label="Open chat">
            <span class="chat-text">Questions? Chat with us</span>
        </button>
    </div>
    -->

    <!-- JavaScript -->
    <script src="{{ '/js/main.js' | url }}"></script>
</body>
</html>
